<% 
if task == "login" 
    message = "Login"
    action = session_url

elsif task == "signup" 
    message = "Sign up"
    action = users_url
end
%>

<form action="<%= action %>" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  >
  
  <label for="user_username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="user_username"
  >
  <br>

  <label for="user_password">Password</label>
  <input 
    type="password"
    name="user[password]"
    id="user_password"
  >
  <br>

  <input type="submit" value="<%= message %>">
</form>